<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角 -->
    <corners android:radius="30dp" />

    <!-- 背景颜色 -->
    <solid android:color="@color/light_gray" />

    <!-- 内边距 -->
    <padding
        android:bottom="8dp"
        android:left="16dp"
        android:right="16dp"
        android:top="8dp" />

    <!-- 阴影效果 -->
    <shadow
        android:color="#77000000"
        android:radius="4dp" />
</shape>
